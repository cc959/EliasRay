{
	"tasks": [
		{
			"label": "Build",
			"dependsOn": [
				"C/C++: g++ build",
				"Copy resources"
			]
		},
		{
			"type": "shell",
			"label": "C/C++: g++ build",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-O3",
				"-march=native",
				"-g",
				"-std=c++17",
				"-I./include",
				"./*.cpp",
				"./*.h",
				"-lGL",
				"-lGLEW",
				"-lsfml-audio",
				"-lsfml-graphics",
				"-lsfml-network",
				"-lsfml-system",
				"-lsfml-window",
				"-o",
				"./Build/main",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "Task generated by Debugger."
		},
		{
			"label": "Copy resources",
			"command": "rsync",
			"args": [
				"--archive",
				"--delete",
				"./res",
				"./Build"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	],
	"version": "2.0.0"
}